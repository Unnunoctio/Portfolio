---
import HomeIcon from "../icons/HomeIcon.astro";
const { project } = Astro.params
---

<nav class="fixed top-4 sm:top-6 md:top-8 lg:top-10 z-30 w-full max-w-nav flex justify-between px-4 sm:px-6 md:px-8 lg:px-10">
  <a
    href="/"
    aria-label="home-page"
    class={`${project !== undefined ? 'visible' : 'invisible'} group flex justify-center p-3 bg-bg-btn rounded-2xl shadow-btn transition-colors hover:bg-hover-btn`}
  >
    <HomeIcon style="h-7 w-7 fill-text-secondary transition-colors group-hover:fill-hover-text" />
  </a>
  <a>Menu</a>
</nav>
